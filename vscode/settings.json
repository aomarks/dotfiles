{
  // Editor font (default: Droid Sans Mono).
  "editor.fontFamily": "Ubuntu Mono",
  // Number of spaces to insert for per Tab press (default: 4).
  "editor.tabSize": 2,
  // Auto-foramt on save (default: false).
  "editor.formatOnSave": true,

  // On launch, open a new empty file (default: welcome screen).
  "workbench.startupEditor": "newUntitledFile",
  // How much to indent each level in file explorer (default: 8px).
  "workbench.tree.indent": 18,
  // Always show visual level guides in file explorer (default: on hover)
  "workbench.tree.renderIndentGuides": "always",
  // Toggle the top menu bar with Alt (default: always visible).
  "window.menuBarVisibility": "toggle",
  // Make tabs a smaller, more consistent size (default: fit).
  "workbench.editor.tabSizing": "shrink",
  // Show border on modified but unsaved tabs (default: false).
  "workbench.editor.highlightModifiedTabs": true,
  // Don't automatically close HTML tags (default: true).
  "html.autoClosingTags": false,

  // Highlight all text matching current search (default: false).
  "vim.hlsearch": true,
  // Don't wrap searches around the end of the file (default: true).
  "vim.wrapscan": false,
  // Workaround bug where Caps Lock -> Escape re-binding doesn't work
  // https://github.com/microsoft/vscode/issues/23991 (default: code).
  "keyboard.dispatch": "keyCode",

  // Language-specific settings.
  "[javascript]": {
    // Format JavaScript with Prettier (default: none).
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
