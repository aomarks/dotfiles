{
  // Number of spaces to insert for per Tab press (default: 4).
  "editor.tabSize": 2,
  // Auto-format on save (default: false).
  "editor.formatOnSave": true,
  // On launch, open a new empty file (default: welcome screen).
  "workbench.startupEditor": "newUntitledFile",
  // How much to indent each level in file explorer (default: 8px).
  "workbench.tree.indent": 18,
  // Always show visual level guides in file explorer (default: on hover).
  "workbench.tree.renderIndentGuides": "always",
  // Toggle the top menu bar with Alt (default: always visible).
  "window.menuBarVisibility": "toggle",
  // Make tabs a smaller, more consistent size (default: fit).
  "workbench.editor.tabSizing": "shrink",
  // Show border on modified but unsaved tabs (default: false).
  "workbench.editor.highlightModifiedTabs": true,
  // Don't automatically close HTML tags (default: true).
  "html.autoClosingTags": false,
  // Don't automatically reveal current file in file explorer (default: true).
  "explorer.autoReveal": false,
  // Workaround bug where Caps Lock -> Escape re-binding doesn't work
  // https://github.com/microsoft/vscode/issues/23991 (default: code).
  "keyboard.dispatch": "keyCode",
  // Language-specific settings.
  "[javascript]": {
    // Format JavaScript with Prettier (default: none).
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // Don't flatten dirs with one file in file explorer (default: true)
  "explorer.compactFolders": false,
  // Always insert a final newline when saving (default: false)
  "files.insertFinalNewline": true,
  // Always trim trailing whitespace (default: false)
  "files.trimTrailingWhitespace": true,
  // Add ".js" to the end of auto-added JS/TS import statements (default: no extension)
  "javascript.preferences.importModuleSpecifierEnding": "js"
}
